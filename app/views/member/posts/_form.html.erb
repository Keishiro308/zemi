<div class="form_card">
  <%= form_with model: @post, url: url do |f| %>
  <%= render 'shared/error', object: f.object %>
    <div class="field">
      <div class="form_wrap">

        <%= f.text_field :title, class: 'entry_field' %>
        <%= f.label :title %>
      <span class='focus_line'></span>
      </div>
    </div>
    <div>
      <%= f.label :content, '本文' %>
      <%= f.rich_text_area :content %>
    </div>
    <%= f.submit text, class: 'btn' %>
  <% end %>
</div>