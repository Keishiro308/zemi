<div class="form_card">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div class="form_wrap">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'entry_field' %>
      <%= f.label :email %>
      <span class='focus_line'></span>
    </div>

  </div>

  <div class="field">
    <div class="form_wrap">

      <%= f.password_field :password, autocomplete: "current-password", class: 'entry_field' %>
      <%= f.label :password %>
      <span class='focus_line'></span>
    </div>

  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field-check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>

    </div>
  <% end %>

  <div class="actions btn">
    <%= f.submit "ログイン", class: 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>